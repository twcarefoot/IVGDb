@using IVGDb.Models;

@model UserViewModel

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

@using (Html.BeginForm("Register", "User", FormMethod.Post))
{
    <div class="row">
        <div>
            <div class="col-md-2">@Html.LabelFor(m => m.Username)</div>
            <div class="col-md-10 registration-section">@Html.TextBoxFor(m => m.Username, new { @placeholder = "Username" })</div>
            <div class="col-md-2">@Html.LabelFor(m => m.Email)</div>
            <div class="col-md-10 registration-section">@Html.TextBoxFor(m => m.Email, new { @placeholder = "Email" })</div>
            <div class="col-md-2">@Html.LabelFor(m => m.Password)</div>
            <div class="col-md-10 registration-section">@Html.TextBoxFor(m => m.Password, new { @type = "password", @placeholder = "Password" })</div>
            <div class="col-md-2">@Html.LabelFor(m => m.ConfirmPassword)</div>
            <div class="col-md-10 registration-section">@Html.TextBoxFor(m => m.ConfirmPassword, new { @type = "password", @placeholder = "Confirm Password" })</div>
        </div>
        <div id="Register-btn">
            <button type="submit" name="Register">Register!</button>
        </div>
    </div>
}