@using IVGDb.Models;

@model UserViewModel

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

@using (Html.BeginForm("Register", "User", FormMethod.Post))
{
    <p>
        <label>Username: @Html.TextBoxFor(m => m.Username, new { @placeholder = "Username" })</label>
    </p>
    <p>
        <label>Email: @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email" })</label>
    </p>
    <p>
        <label>Password: @Html.TextBoxFor(m => m.Password, new { @type = "password", @placeholder = "Password" })</label>
    </p>
    <p>
        <label>Confirm Password: @Html.TextBoxFor(m => m.ConfirmPassword, new { @type = "password", @placeholder = "Confirm Password" })</label>
    </p>
    <p>
        <button type="submit" name="Register">Register!</button>
    </p>
}