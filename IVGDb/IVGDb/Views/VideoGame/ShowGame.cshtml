@using IVGDb.Models;

@model VideoGame

@{
    ViewBag.Title = "Show Game";
}

@if (Model != null)
{
    <h2>
        @Html.DisplayFor(m => m.Title)

    <div class="game-controls">
        <a href=""><i class="glyphicon glyphicon-wrench"></i></a>
        <a href=""><i class="glyphicon glyphicon-trash"></i></a>
    </div>
    </h2>

    <div class="game-container">

        <div class="game-page-box-art">
            <img src="@Html.DisplayFor(m => m.BoxArtLink)" />
        </div>

        <div class="game-information-container">
            <div class="game-information">
                <p>
                    @Html.LabelFor(m => m.Publisher)
                    @Html.DisplayFor(m => m.Publisher)
                    @Html.LabelFor(m => m.Developer)
                    @Html.DisplayFor(m => m.Developer)
                </p>
                <p>
                    @Html.LabelFor(m => m.ReleaseDate)
                    @Html.DisplayFor(m => m.ReleaseDate)
                </p>
                <p>
                    @Html.LabelFor(m => m.Console)
                    @Html.DisplayFor(m => m.Console)
                </p>
            </div>
            <div class="game-information-synopsis">
                <h4>Synopsis:</h4>
            </div>
        </div>
    </div>

    <div id="disqus_thread"></div>
    <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'ivgdb'; // required: replace example with your forum shortname
        var disqus_identifier = @Model.GameID;
        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    </script>
    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>


}



else
{
    <h2>Sorry, the title you're looking for was not found</h2>
}